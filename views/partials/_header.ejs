    <h4>Hi, <%= user['email'] %></h4>
    <form method="POST" action="/logout">
      <button type="submit" class="btn btn-outline-dark">Logout</button>
    </form>
    <% } else{ %>  
      <p>---</p>
      <a style="color: #555; margin: 1px;" href="/register"><h5>Register</h5></a>
